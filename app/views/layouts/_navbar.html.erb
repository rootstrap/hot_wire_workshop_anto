<div class="flex bg-black px-6 gap-10 justify-around m-auto lg:h-24 h-14 sticky items-center" >
    <%= link_to root_path, class: 'my-auto' do %>
      <%= image_tag("logo") %>
    <% end %>
    <div class="flex flex-col md:flex-row items-start md:items-center justify-betwee w-full">
    <%= form_with url: products_path, method: :get, data: { controller: 'search-product', search_product_target: 'form' } do |f| %>
      <%= search_field_tag :q, params[:q], class: "text-gray-800", placeholder: "Search...", data: { action: "input->search-product#submit" } %>
    <% end %>

    </div>


   <%= link_to "shopping_cart_path", class: 'p-3 px-5 border rounded mx-auto inline-flex items-center' do %>
      <span class="font-sans text-sm text-white hidden lg:inline whitespace-nowrap">Shopping Cart</span>
      <%= image_tag("cart", class: 'inline lg:px-1') %>
  <% end %>
</div>
